#include <stdio.h>
 
int main() {
 
    double a, b, c, valor, area;
    
    scanf("%lf %lf %lf", &a, &b, &c);
    
    valor = a+b+c;
    area = ((a+b) * c) / 2;
    
    if ((a < b+c) && (b < a+c) && (c < a+b)) {
        printf("Perimetro = %.1lf\n", valor);
    } else {
        printf("Area = %.1lf\n", area);
    }
 
    return 0;
}
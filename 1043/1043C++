#include <stdio.h>
#include <iostream>
#include <iomanip>
int main() {
 
    double a, b, c, valor, area;
    
    std::cin >> a >> b >> c;
    
    valor = a+b+c;
    area = ((a+b) * c) / 2;
    
    if ((a < b+c) && (b < a+c) && (c < a+b)) {
        std::cout << "Perimetro = " << std::fixed << std::setprecision(1) << valor << std::endl;
    } else {
        std::cout << "Area = " << std::fixed << std::setprecision(1) << area << std::endl;
    }
    return 0;
}
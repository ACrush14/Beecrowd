#include <stdio.h>
 
int main() {
 
    int cod1, num1;
    double valor1;
    
    int cod2, num2;
    double valor2;
    
    double total;
    
    scanf("%d %d %lf", &cod1, &num1, &valor1);
    
    scanf("%d %d %lf", &cod2, &num2, &valor2);
    
    total = (num1 * valor1) + (num2 * valor2);
    
    printf("VALOR A PAGAR: R$ %.2f\n", total);
 
    return 0;
}
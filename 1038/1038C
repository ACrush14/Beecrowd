#include <stdio.h>
 
int main() {
 
    int ent, qtde;
    
    double total = 0.0;
    
    scanf("%d %d", &ent, &qtde);
    
    switch (ent) {
        case 1:
            total = 4.00 * qtde;
            break;
        case 2:
            total = 4.50 * qtde;
            break;
        case 3:
            total = 5.00 * qtde;
            break;
        case 4:
            total = 2.00 * qtde;
            break;
        case 5:
            total = 1.50 * qtde;
            break;            
    }
    
    printf("Total: R$ %.2f\n", total);
    
    
    return 0;
}